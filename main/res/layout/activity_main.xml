<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sky"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/aprotitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="25dp"
        android:layout_marginBottom="25dp"
        android:drawablePadding="0dp"
        android:gravity="center"
        android:text="Apro Manager"
        android:textColor="#D8FFFFFF"
        android:textSize="35dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/signuptitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/aprotitle"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:text="Sign up here to continue"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/useremail"
        android:layout_below="@id/signuptitle"
        android:background="#FFFFFF"
        android:hint="Enter your email"
        android:textColorHint="@color/black"
        android:layout_margin="10dp"
        android:padding="20dp"
        android:drawableLeft="@drawable/baseline_email_24"
        android:drawablePadding="20dp"
        />
    <com.google.android.material.button.MaterialButton
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/signupbtn"
        android:text="Sign Up"
        android:textSize="20dp"
        android:layout_below="@id/useremail"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#79121B81"
        android:layout_margin="20dp"
        android:padding="10dp"
        />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/other"
        android:layout_below="@id/signupbtn"
        android:text="OR"
        android:textSize="18dp"
        android:textStyle="bold"
        android:textColor="#9AFFFFFF"
        android:gravity="center"
        android:layout_margin="0dp"
        />
  <com.google.android.material.button.MaterialButton
      android:id="@+id/btn_google"
      android:layout_width="500dp"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:layout_marginHorizontal="30dp"
      android:paddingHorizontal="50dp"
      android:layout_centerHorizontal="true"
      android:text="Continue with Google"
      android:textSize="16dp"
      android:backgroundTint="@color/white"
      android:textColor="@color/black"
      android:layout_below="@id/other"
      android:padding="15dp"
      android:drawableStart="@drawable/google"
      android:drawablePadding="20dp"
      />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_micro"

        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="30dp"
        android:paddingHorizontal="50dp"
        android:layout_centerHorizontal="true"
        android:text="Continue with Microsoft"
        android:textSize="16dp"
        android:backgroundTint="@color/white"
        android:textColor="@color/black"
        android:layout_below="@id/btn_google"
        android:padding="15dp"

        android:drawableStart="@drawable/Microsoftlogo"
        android:drawablePadding="20dp"
        />

</RelativeLayout>
